{
  "version": 2,
  "builds": [
    {
      "src": "server/src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/src/app.js" },
    { "src": "/[^.]+", "dest": "/client/index.html", "status": 200 }
  ]
}